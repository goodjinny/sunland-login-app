<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Login app!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet"
                  href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css') }}"
                  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
                  crossorigin="anonymous"
            >
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block page_title %}
                <h1>Index page</h1>
            {% endblock %}
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as <b>{{ app.user.username }}</b> | <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            {% block body %}
                <a href="{{ path('login') }}">Login</a>
            {% endblock %}
        </div>
    </body>
</html>
